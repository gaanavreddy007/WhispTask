rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // SUBCOLLECTION: Tasks under users (TaskService structure)
      match /tasks/{taskId} {
        allow read, write, create, update, delete: if request.auth != null && request.auth.uid == userId;
        allow list: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to user's backups
      match /backups/{backupId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // TOP-LEVEL: Tasks collection (DataSyncService structure)
    match /tasks/{taskId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId
        && request.resource.data.keys().hasAll(['title', 'userId', 'createdAt', 'isCompleted'])
        && request.resource.data.title is string
        && request.resource.data.title.size() > 0
        && request.resource.data.title.size() <= 200
        && request.resource.data.userId is string
        && request.resource.data.createdAt is timestamp
        && request.resource.data.isCompleted is bool;
        
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.userId
        && request.resource.data.userId == resource.data.userId;
    }
    
    // Allow users to query their own tasks (both structures)
    match /tasks/{document=**} {
      allow list: if request.auth != null 
        && request.query.where('userId', '==', request.auth.uid).size() == 1;
    }
  }
}
